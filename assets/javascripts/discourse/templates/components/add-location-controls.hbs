{{#if location}}
  <DButton @class={{valueClasses}} @title="location.label.add" @action={{action "showAddLocation"}} @translatedLabel={{valueLabel}} @icon="map-marker-alt" />
  {{#unless noText}}
    <DButton @icon="times" @action={{action "removeLocation"}} @class="remove" />
  {{/unless}}
{{else}}
  {{#if iconOnly}}
    <DButton @class="add-location-btn"
               @icon="map-marker-alt"
               @action={{action "showAddLocation"}}
               @title={{addLabel}} />
  {{else}}
    <DButton @class="add-location-btn"
               @icon="map-marker-alt"
               @label={{addLabel}}
               @action={{action "showAddLocation"}}
               @title={{addLabel}} />
  {{/if}}
{{/if}}
